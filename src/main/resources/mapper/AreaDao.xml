<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.demo.dao.AreaDao">
    <select id="queryArea" resultType="com.imooc.demo.entity.Area">
        SELECT area_id,area_name,priority,creat_time,last_edit_time
        FROM tb_area
        order by priority
        DESC
    </select>

    <select id="queryAreaById" resultType="com.imooc.demo.entity.Area">
        SELECT area_id,area_name,priority,creat_time,last_edit_time
        FROM tb_area
        WHERE area_id =#{areaId}
    </select>

    <insert id="insertArea" useGeneratedKeys="true" keyProperty="areaId"
     keyColumn="area_id" parameterType="com.imooc.demo.entity.Area">
        INSERT INTO `demo`.`tb_area`
	( `area_name`,
	`priority`,
	`creat_time`,
	`last_edit_time`
	)
	VALUES(
	#{areaName},#{priority},#{creatTime},#{lastEditTime}
	)
    </insert>

    <update id="updateArea" parameterType="com.imooc.demo.entity.Area">
        UPDATE tb_area
        <set>
            <if test="areaName!=null">area_name=#{areaName},</if>
            <if test="priority!=null">priority=#{priority},</if>
            <if test="areaName!=null">last_edit_time=#{lastEditTime}</if>
        </set>
        WHERE area_id=#{areaId}
    </update>
    
    <delete id="deleteArea" parameterType="com.imooc.demo.entity.Area">
        DELETE FROM
        tb_area
        WHERE
        area_id =#{areaId}
    </delete>
    
</mapper>